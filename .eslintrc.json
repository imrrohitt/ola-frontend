{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "semi": ["error", "always"],
      "quotes": ["error", "double"]
    },
    "settings": {
      "react": {
        "version": "detect" 
      }
    }
  }
  